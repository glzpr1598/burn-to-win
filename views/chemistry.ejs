            const rows = Array.from(tbody.querySelectorAll('tr'));
            const getValue = (row, index) => {
                const text = row.cells[index].innerText.trim().replace('%', '');
                const value = parseFloat(text);
                return isNaN(value) ? -Infinity : value;
            };
