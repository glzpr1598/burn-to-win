                let valA, valB;

                if (columnIndex === 0) { // 'ê·¸(ë…€)ì™€' ì»¬ëŸ¼ (ë¬¸ìì—´ ì •ë ¬)
                    return sortState.ascending ? cellA_text.localeCompare(cellB_text) : cellB_text.localeCompare(cellA_text);
