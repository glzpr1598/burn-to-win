                }

                // 4. ìƒëŒ€ í¸ ìŠ¹ë¥  (ë‚´ë¦¼ì°¨ìˆœ)
                const oppWinRateA = getValue(a, 4);
                const oppWinRateB = getValue(b, 4);
                return oppWinRateB - oppWinRateA;
            });

            // ì •ë ¬ëœ ìˆœì„œëŒ€ë¡œ í–‰ì„ ë‹¤ì‹œ ì¶”ê°€
            tbody.innerHTML = '';
            rows.forEach(row => tbody.appendChild(row));
        }

